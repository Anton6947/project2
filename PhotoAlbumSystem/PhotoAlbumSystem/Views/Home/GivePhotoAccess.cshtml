@model DataLayer.Entities.PhotoAccess

<h4>PhotoAccess</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GivePhotoAccess">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User_Id" class="control-label"></label>
                <select asp-for="User_Id" class ="form-control" asp-items="ViewBag.User_Id"></select>
            </div>
            <div class="form-group">
                <label asp-for="Photo_Id" class="control-label"></label>
                <select asp-for="Photo_Id" class ="form-control" asp-items="ViewBag.Photo_Id"></select>
            </div>
            <div class="form-group">
                <label asp-for="AccessType_Id" class="control-label"></label>
                <select asp-for="AccessType_Id" class ="form-control" asp-items="ViewBag.AccessType_Id"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Share" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
