@{
    ViewData["Title"] = "Album Page";//Test
}
@model IEnumerable<DataLayer.Entities.Album>


<p>
    <a asp-action="AlbumCreate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AlbumName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AlbumName)
                </td>
                <td>
                    <a asp-action="AlbumEdit" asp-route-id="@item.Album_Id">Edit</a> |
                    <a asp-action="AlbumDelete" asp-route-id="@item.Album_Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
