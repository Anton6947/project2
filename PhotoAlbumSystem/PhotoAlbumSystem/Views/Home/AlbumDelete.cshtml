@model DataLayer.Entities.Album

<h4>Delete Album</h4>
<div>
    
    
    
    <form asp-action="AlbumDelete">
        <div class="form-group">
            Please Confirm the Album Name
            <input asp-for="AlbumName" class="form-control" />
            <span asp-validation-for="AlbumName" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Album_Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Album">Back to Albums</a>
    </form>
</div>
