@model DataLayer.Entities.MetaData

<h4>MetaData</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateMetaData">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Photo_Id" />
            <div class="form-group">
                Geo Location
                <input asp-for="GeoLocation" class="form-control" />
                <span asp-validation-for="GeoLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tags" class="control-label"></label>
                <input asp-for="Tags" class="form-control" />
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>
            <div class="form-group">
                Date Captured
                <input asp-for="CapturedDate" class="form-control" />
                <span asp-validation-for="CapturedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                Captured by user
                <input asp-for="CapturedByUser" class="form-control" />
                <span asp-validation-for="CapturedByUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Photo">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
