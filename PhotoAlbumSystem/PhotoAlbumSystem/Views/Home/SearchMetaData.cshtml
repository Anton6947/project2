@model SearchMeta

<h4>Search Photos Via Metadata</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchMetaData">           
            <div class="form-group">
                Search here
                <input asp-for="searchString" class="form-control" />
                <span asp-validation-for="searchString" class="text-danger"></span>
            </div>          
            <div class="form-group">
                <input type="submit" asp-action="TaggedPhotos" value ="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Photo">View All Photos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
