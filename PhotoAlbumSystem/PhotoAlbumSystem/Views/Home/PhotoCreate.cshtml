@model PhotoView


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PhotoCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                 <dt>
                     @Html.LabelFor(model => model.FileName, "Upload a file from your PC")
                 </dt>
                <input type="file" value="FileName" required  />
            </div>
             <div class="form-group">
                 <label asp-for="Album_Id" class="control-label"></label>
                 <input asp-for="Album_Id" class="form-control" />
                 <span asp-validation-for="Album_Id" class="text-danger"></span>
             </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
